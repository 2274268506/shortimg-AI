# ==========================================
# 🖼️ TC-GO 图床系统 - MySQL 测试环境配置
# ==========================================
# 此配置文件用于 MySQL 数据库测试部署

# ==================== 数据库配置 ====================
DB_TYPE=mysql
DB_DSN=imagebed_user:test_password_123@tcp(localhost:3307)/imagebed?charset=utf8mb4&parseTime=True&loc=Local

# ==================== Redis 缓存配置 ====================
REDIS_ENABLED=true
REDIS_ADDR=localhost:6380
REDIS_PASSWORD=
REDIS_DB=0
CACHE_TTL=10m

# ==================== 服务器配置 ====================
SERVER_PORT=8080
SERVER_MODE=debug

# ==================== JWT 认证配置 ====================
JWT_SECRET=test-jwt-secret-key-for-mysql-testing-32chars-minimum-length
JWT_EXPIRATION=24h

# ==================== 用户管理配置 ====================
ALLOW_REGISTRATION=true

# ==================== 文件上传配置 ====================
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=100

# ==================== 存储配置 ====================
STORAGE_TYPE=local
STORAGE_LOCAL_PATH=./uploads
STORAGE_BASE_URL=/api/files

# ==================== 日志配置 ====================
LOG_PATH=./logs/app.log
LOG_MAX_SIZE=100
LOG_MAX_AGE=30
LOG_MAX_BACKUPS=10

# ==================== 短链服务配置 ====================
SHORT_LINK_ENABLED=false

# ==================== CORS 跨域配置 ====================
CORS_ENABLED=true
CORS_ALLOW_ORIGINS=http://localhost:5173,http://localhost:5174,http://localhost:3000,http://127.0.0.1:5173
CORS_ALLOW_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
CORS_ALLOW_HEADERS=Origin,Content-Type,Accept,Authorization
CORS_MAX_AGE=12
